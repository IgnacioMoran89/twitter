<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <%= render 'form', tweet: @tweet %>
<% end %>

<h1>Tweets</h1>
    

<table class ='table'>
  <thead class="thead-dark">
    <tr>
      <th>Content</th>
      <th>Username</th>
      <th>Profile Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.user.username %></td>
        <td><img src="<%= tweet.user.profile_photo %>" width="60" height="60" class="round-circle mb-2" ></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="p-4">
        <div class="text-center">
            <%= link_to_prev_page @tweets, "Show less", class: "btn btn-dark btn-sm text-11" %>
            <%= link_to_next_page @tweets, "Show more", class:"btn btn-dark btn-sm text-11"%>
        </div>
    </div>
<%#= paginate @tweets %>
<br>


