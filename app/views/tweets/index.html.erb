<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Twauthor</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.twauthor %></td>
        <td><%= tweet.user %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="p-4">
        <div class="text-center">
            <%= link_to_prev_page @tweets, "Mostrar Menos Tweets", class: "btn btn-dark btn-sm text-11" %>
            <i class="btn btn-primary btn-sm text-13 "><%= @tweets.current_page %></i>
            <%= link_to_next_page @tweets, "Mostrar Mas Tweets", class:"btn btn-dark btn-sm text-11"%>
        </div>
    </div>
<%#= paginate @tweets %>
<br>

