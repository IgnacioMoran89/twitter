<p id="notice"><%= notice %></p>

<div class="card" style="width: 70%;">

  <ul class="list-group list-group-flush">
    <li class="list-group-item"><img src="<%= @tweet.user.profile_photo %>" width="100" height="100" class="rounded-circle mb-2"> <strong>Tweeted By:</strong> <%= @tweet.user.username %></li>
    
    <li class="list-group-item"> Retweeted from: <% if @tweet.user_id != @tweet.twauthor %>
        <%= @tweet.twauthor %>
      <% else %>
        <p> - </p>
      <% end %>
    </li>

    <li class="list-group-item">What <strong><%= @tweet.user.username %></strong> said: <%= @tweet.content %> </li>
    <li class="list-group-item"><strong>Liked by:</strong> <br>
      <% @tweet.votes_for.voters.each do | p | %> 
        <img src="<%= p.profile_photo %>" width="60" height="60" class="round-circle mb-2" >
      <% end%> 
    </li>
  </ul>
</div>


<div class="tab-pane fade bg-whisper" id="four" role="tabpanel" aria-labelledby="four-tab">
  
    <article class="whisper-post py-3">
      <div class="col-2">
        <%= link_to (current_user.is_following?(user) ? "<i class='fas fa-user-minus text-warning text-13'></i>" : "<i class='fas fa-user-plus color-blue-deep text-13'></i>").html_safe, 
          users_follow_path(user.id), 
          class: "follow-btn",
          'title' => (current_user.is_following?(user) ? "Dejar de Seguir" : "Seguir"),
          'data-toggle' => 'tooltip',
          'data-placement' => 'right',
          method: :post
        %>
        </div>
      </div>
    </article>
  
</div>


  <%= link_to 'Back', tweets_path, class: 'btn btn-dark' %>
